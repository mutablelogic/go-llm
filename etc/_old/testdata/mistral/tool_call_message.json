{
  "description": "Messages with tool calls and tool responses for function calling",
  "examples": [
    {
      "name": "Assistant message with tool call",
      "message": {
        "role": "assistant",
        "content": "",
        "tool_calls": [
          {
            "id": "call_abc123",
            "type": "function",
            "function": {
              "name": "get_current_weather",
              "arguments": "{\"location\": \"San Francisco, CA\", \"unit\": \"celsius\"}"
            }
          }
        ]
      }
    },
    {
      "name": "Tool response message",
      "message": {
        "role": "tool",
        "name": "get_current_weather",
        "content": "{\"temperature\": 22, \"condition\": \"sunny\"}",
        "tool_call_id": "call_abc123"
      }
    },
    {
      "name": "Assistant with multiple tool calls",
      "message": {
        "role": "assistant",
        "content": "",
        "tool_calls": [
          {
            "id": "call_xyz789",
            "type": "function",
            "function": {
              "name": "get_current_weather",
              "arguments": "{\"location\": \"New York, NY\", \"unit\": \"fahrenheit\"}"
            }
          },
          {
            "id": "call_def456",
            "type": "function",
            "function": {
              "name": "get_current_weather",
              "arguments": "{\"location\": \"London, UK\", \"unit\": \"celsius\"}"
            }
          }
        ]
      }
    },
    {
      "name": "Multiple tool responses",
      "message": {
        "role": "tool",
        "name": "get_current_weather",
        "content": "{\"temperature\": 65, \"condition\": \"cloudy\"}",
        "tool_call_id": "call_xyz789"
      }
    },
    {
      "name": "Assistant with text and tool call",
      "message": {
        "role": "assistant",
        "content": "Let me check the weather for you.",
        "tool_calls": [
          {
            "id": "call_weather_1",
            "type": "function",
            "function": {
              "name": "get_current_weather",
              "arguments": "{\"location\": \"Paris, France\"}"
            }
          }
        ]
      }
    }
  ]
}
