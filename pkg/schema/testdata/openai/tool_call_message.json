{
  "description": "Messages with tool calls and tool responses for function calling",
  "examples": [
    {
      "name": "Assistant message with tool call",
      "message": {
        "role": "assistant",
        "content": null,
        "tool_calls": [
          {
            "id": "call_abc123",
            "type": "function",
            "function": {
              "name": "get_current_weather",
              "arguments": "{\"location\": \"San Francisco, CA\", \"unit\": \"celsius\"}"
            }
          }
        ]
      }
    },
    {
      "name": "Tool response message",
      "message": {
        "role": "tool",
        "tool_call_id": "call_abc123",
        "content": "{\"temperature\": 22, \"condition\": \"sunny\"}"
      }
    },
    {
      "name": "Assistant with multiple tool calls",
      "message": {
        "role": "assistant",
        "content": null,
        "tool_calls": [
          {
            "id": "call_xyz789",
            "type": "function",
            "function": {
              "name": "get_current_weather",
              "arguments": "{\"location\": \"New York, NY\"}"
            }
          },
          {
            "id": "call_def456",
            "type": "function",
            "function": {
              "name": "get_current_weather",
              "arguments": "{\"location\": \"London, UK\"}"
            }
          }
        ]
      }
    },
    {
      "name": "Tool response (first of multiple)",
      "message": {
        "role": "tool",
        "tool_call_id": "call_xyz789",
        "content": "{\"temperature\": 18, \"condition\": \"cloudy\"}"
      }
    },
    {
      "name": "Assistant with text and tool call",
      "message": {
        "role": "assistant",
        "content": "Let me check the weather for you.",
        "tool_calls": [
          {
            "id": "call_weather_1",
            "type": "function",
            "function": {
              "name": "get_current_weather",
              "arguments": "{\"location\": \"Boston, MA\"}"
            }
          }
        ]
      }
    },
    {
      "name": "Tool response with error",
      "message": {
        "role": "tool",
        "tool_call_id": "call_abc123",
        "content": "Error: Unable to fetch weather data for the specified location."
      }
    }
  ]
}
